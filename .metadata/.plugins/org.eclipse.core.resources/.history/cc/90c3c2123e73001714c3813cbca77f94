  * @brief   Default main function.
  ******************************************************************************
*/


#include "stm32f4xx.h"
#define PB7_SET_MASK 0x80
#define PB7_CLEAR_MASK 0x7F

int main(void)
{
	while(1)
	{
		GPIOB->MODER = 0x4000;
		GPIOB->OTYPER = 0x0;
		GPIOB->OSPEEDR = 0xC000;
		GPIOB->PUPDR = 0x0;

		GPIOB->ODR = 0x80;

		for(int i = 0; i < 50000; i++);

		GPIOB->ODR = 0x00;
	}
}
